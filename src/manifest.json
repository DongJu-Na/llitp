{
  "name": "llitp",
  "description": "let's live in the present",
  "version": "0.1",
  "manifest_version": 3,
  "permissions": [
    "favicon",
    "idle",
    "storage",
    "tabs",
    "notifications"
  ],
  "action": {
    "default_popup": "html/popup.html",
    "default_title": "llitp",
    "default_icons": {
      "16": "./images/icon/icon16.png",
      "32": "./images/icon/icon32.png",
      "48": "./images/ic on/icon48.png",
      "128": "./images/icon/icon128.png"
    }
  },
  "background": {
    "service_worker": "js/chrome/background.js",
    "type" : "module"
  },
  "icons": {
    "16": "./images/icon/icon16.png",
    "32": "./images/icon/icon32.png",
    "48": "./images/icon/icon48.png",
    "128": "./images/icon/icon128.png"
  }
}
